@model SistemaPerfiladoCriminal.Models.Autor

@{
    ViewBag.Title = "Detalles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.LstrNombre</h2>

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Detalle</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var detalle in Model.LcolDetalles.ToList())
        {
        <tr>
            <td>
                @detalle.LstrDetalle
            </td>
            <td>
                @Html.ActionLink("Editar", "../DetallesAutores/Edit", new { id = detalle.LintId }) |
                @Html.ActionLink("Eliminar", "../DetallesAutores/Delete", new { id = detalle.LintId })
            </td>
        </tr>
        }
    </tbody>
</table>
