@model IEnumerable<SistemaPerfiladoCriminal.Models.Caso>

@{
    ViewBag.Title = "Casos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Casos</h2>

<p>
    @Html.ActionLink("Crear caso", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Lista de casos
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.LstrNombre)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.LintId }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.LintId }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.LintId })
        </td>
    </tr>
}

</table>
