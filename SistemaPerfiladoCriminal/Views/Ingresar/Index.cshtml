
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="center">
    <h1>Inicio de sesión</h1>

    <form action="~/Administrador" method="post">
        <div class="form-group top-margin">
            <label for="username">Ingrese su usuario</label>
            <input type="text" class="form-control center-input" id="username" placeholder="Ingrese su usuario">
        </div>

        <div class="form-group top-margin">
            <label for="pwd">Ingrese su contraseña</label>
            <input type="password" class="form-control center-input" id="pwd" placeholder="Ingrese su contraseña">
        </div>

        <input type="submit" class="btn btn-info top-margin" value="Iniciar sesión"/>
    </form>
</div>